---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

const { class: classes } = Astro.props;
---

<header
  class:list={[
    "pt-6 sm:pt-12 md:pt-18 lg:pt-24 transition-all ease-in-outs duration-200",
    classes,
  ]}
>
  <nav class="-space-x-4 h-fit flex">
    <HeaderLink class="underline-offset-4 z-20 drop-shadow-md" href="/"
      >Home</HeaderLink
    >
    <HeaderLink class="underline-offset-4 z-10 drop-shadow-md" href="/blog"
      >Blog</HeaderLink
    >
    <HeaderLink class="underline-offset-4 z-0 overflow-hidden" href="/gallery"
      >Gallery</HeaderLink
    >
  </nav>
</header>

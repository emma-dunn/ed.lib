---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Page from "../components/Page.astro";

type Props = CollectionEntry<"gallery">["data"];

const { title, description, dateArchived, dateCreated, src, alt } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Page>
      <div class="p-4">
        <img class="object-cover" src={src} alt={alt} />
      </div>
      <div class="p-4 text-left mx-auto">
        <h1>
          {title}
        </h1>
        <p>{description}</p>
        <div class="py-2">
          {
            dateCreated && (
              <div>
                <span class="font-semibold">Created</span>
                <FormattedDate date={dateCreated} />
              </div>
            )
          }
          <span class="font-semibold">Archived</span>
          <FormattedDate date={dateArchived} />
        </div>
      </div>

      <div class="space-y-6">
        <slot />
      </div>
    </Page>

    <Footer />
  </body>
</html>

---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Page from "../../components/Page.astro";
import { getGallery } from "../../content.config";

const gallery = await getGallery();
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Page class="md:px-6">
      <section>
        <div class="pb-4">
          <h2>Gallery</h2>
        </div>
        <ul
          class="list-none p-0 items-center grid md:grid-cols-2 xl:grid-cols-3 gap-4"
        >
          {
            gallery.map((item) => (
              <li class="group w-full max-w-720 mb-auto">
                <a
                  href={`/gallery/${item.id}/`}
                  class="hover:no-underline hover:brightness-100"
                >
                  <img
                    src={item.data.src}
                    alt={item.data.alt}
                    class="object-cover w-full max-h-64"
                  />
                  <h4 class="pt-2 text-base-content group-hover:text-success group-hover:brightness-75 sm:text-3xl md:text-2xl lg:text-3xl xl:text-2xl">
                    {item.data.title}
                  </h4>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </Page>
    <Footer />
  </body>
</html>
